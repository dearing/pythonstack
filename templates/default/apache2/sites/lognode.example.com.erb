<VirtualHost *:<%= @params[:server_port] || node['apache']['listen_ports'].first %>>
  ErrorLog ${APACHE_LOG_DIR}/graylog2-web.log
  LogLevel warn
  CustomLog ${APACHE_LOG_DIR}/graylog2-web.log combined

  ProxyPass / http://localhost:9000/
  ProxyPreserveHost On
  ProxyPassReverse / http://localhost:9000/
  <Location />
    <% if node['apache']['version'] == '2.2' -%>
    Order allow,deny
    Allow from all
    <% elsif node['apache']['version'] == '2.4' -%>
    Require all granted
    <% end -%>
  </Location>
</VirtualHost>
